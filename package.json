{
  "name": "gemini-discord-like",
  "version": "0.1.0-a1",
  "description": "A Discord-like application for Gemini API",
  "main": "electron/main.js",
  "homepage": "https://ichozero.github.io/gemini_frontend_discord_like/",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:github": "cross-env GITHUB_PAGES=true vite build",
    "build:vps": "cross-env NODE_ENV=production vite build",
    "build:web": "cross-env BUILD_TARGET=web vite build",
    "preview": "vite preview",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "build:win": "npm run build && electron-builder --win",
    "build:portable": "npm run build && electron-builder --win portable",
    "build:single-exe": "npm run build && electron-builder --win portable --publish=never",
    "pack:exe": "npm run build && electron-packager . Gemini-Chat --platform=win32 --arch=x64 --out=dist-packager --overwrite",
    "build:linux": "npm run build && electron-builder --linux",
    "build:mac": "npm run build && electron-builder --mac",
    "build:all": "npm run build && electron-builder --win --linux --mac",
    "deploy": "npm run build && gh-pages -d dist -r https://github.com/ichozero/gemini_frontend_discord_like.git"
  },
  "keywords": [
    "gemini",
    "discord",
    "chat",
    "react"
  ],
  "author": "Vincent",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/ios": "^7.4.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-builder-squirrel-windows": "^24.13.3",
    "electron-packager": "^17.1.2",
    "gh-pages": "^6.3.0",
    "terser": "^5.24.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gemini.chat",
    "productName": "Gemini Chat",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gemini Chat"
    },
    "portable": {
      "artifactName": "Gemini-Chat-Portable.exe"
    }
  }
}
